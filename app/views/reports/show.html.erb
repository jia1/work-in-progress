<% @TITLE = @report.function + ": " + @report.title %>
<% provide(:title, @TITLE) %>
<h3><%= @TITLE %></h3>

<div class="card-panel">
  <span style="white-space: pre-line;">
  	<%= @report.text %>
  </span>
</div>

<div class="row center-align">
  <div class="col s12">
    <%= link_to 'Edit', edit_report_path(@report), 
      class: "waves-effect waves-light btn-large" %>
    <%= link_to 'Back', :back, 
      class: "waves-effect waves-light btn-large" %>
    <%= link_to 'Home', reports_path, 
      class: "waves-effect waves-light btn-large" %>
  </div>
</div>

<div class="row">
  <h5>Comments</h5>
  <div class="card-panel blue lighten-5">
    <%= render @report.comments %>
  </div>
</div>

<div class="row">
  <h5>Add a comment</h5>
  <%= form_for([@report, @report.comments.build]) do |f| %>
    <div class="input-field">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div class="input-field">
      <%= f.label :text %><br>
      <%= f.text_area :text, class: "materialize-textarea" %>
    </div>
    <div class="center-align">
      <%= f.submit 'Comment', 
        class: "waves-effect waves-light btn-large" %>
      <%= link_to 'Back', :back, 
        class: "waves-effect waves-light btn-large" %>
      <%= link_to 'Home', reports_path, 
        class: "waves-effect waves-light btn-large" %>
    </div>
  <% end %>
</div>